#%Module######################################################################
proc ModulesHelp { } {
        global version
        puts stderr "Provides netcurses Disk Usage."
}

module-whatis   "ncdu -- Graphical description of disk usage"

set XE2PATH /g/data1/xe2/opt/apps/ncdu

prepend-path PATH             $XE2PATH/bin
prepend-path MANPATH          $XE2PATH/share/man
